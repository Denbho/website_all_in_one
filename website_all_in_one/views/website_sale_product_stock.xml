<?xml version="1.0" encoding="utf-8"?>
<odoo>
        
        <record model="ir.ui.view" id="view_website_sale_config_settings_inherited">
            <field name="name">website.config.settings.inherited</field>
            <field name="model">res.config.settings</field>         
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>  
            <field name="arch" type="xml">                             
                <xpath expr="//div[@id='webmaster_settings']" position="after">
                    <h2>Stock Type Configuration</h2>
                    <!-- <div class="col-12 col-lg-6 o_setting_box" data-string="Website" data-key="website"> -->
                        <div class="row mt16 o_settings_container" id="web_stock_settings">
                            <div class="col-xs-12 col-md-6 o_setting_box" id="website_stock_setting">
                                <div class="o_setting_left_pane">
                                </div>
                                <div class="o_setting_right_pane">
                                    <label class="o_light_label" string="Stock Type Configuration" for="stock_type"/>
                                    <!-- <field name="stock_type" widget="radio"/> -->
                                    <div class="mt8">
                                        <field name="stock_type" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <!-- </div> -->
                </xpath>
            </field>                    
        </record>


        <template id="assets_frontend" inherit_id="website.assets_frontend" name="Custom CSS-JS">
            <xpath expr="." position="inside">
                 <link rel="stylesheet" href="/website_all_in_one/static/src/css/website_sale_product_stock.css"/>
                 <script src="/website_all_in_one/static/src/js/website_sale_product_stock.js" type="text/javascript"></script>
            </xpath>
        </template>
        
        <!-- website.config.settings -->
        


        <!-- New Template For Show/Hide Stock in Product Page -->
        

        <!-- '''- - - - - - - - - - - - - - - - - - - - - - -''' -->
        

        <template id="website_all_in_one.show_stock_qty_message" name="Show Stock Qty Message">
            <t t-if="website.get_website_config() == 'available'">
                 <t t-if="product.product_variant_ids">        
                     <t t-foreach="product.product_variant_ids" t-as="product">
                        <t t-set="product_quantity" />
                        <div class="show_hide_stock_change" t-att-id="'%s' % product.id" t-att-value="'%s' % product.qty_available" style="display:none;"> 
                            <!-- if the qty_available then t-att-value is define for SHow/Hide Stock Message  -->
                            <t t-set="product_obj" t-value="product"/>
                            <t t-call="website_all_in_one.display_stock_qty_message"/>
                        </div>
                    </t>
                </t>
            </t>
            <t t-if="website.get_website_config() == 'outgoing'">
                <t t-if="product.product_variant_ids">         
                     <t t-foreach="product.product_variant_ids" t-as="product">
                     <t t-set="qty_forecasted" t-value="product.qty_available - product.outgoing_qty + product.incoming_qty"/>
                        <div class="show_hide_stock_change" t-att-id="'%s' % product.id" t-att-value="'%s' % qty_forecasted" style="display:none;"> <!-- if the forecasted qty is greater than zero then t-att-value is define for SHow/Hide Stock Message  -->
                            <t t-set="product_obj" t-value="product"/>
                            <t t-call="website_all_in_one.display_stock_qty_message"/>
                        </div>
                    </t>
                </t>
            </t>         
        </template>
        


        <!-- New Template For Disppaly Stock qty in Product Page -->
        <template id="website_all_in_one.display_stock_qty_message_in_item" name="Display Stock Qty Message">
            <t t-if="website.get_website_config() == 'available'">
                <t t-if="product.type == 'product'">
                    <t t-if="product.qty_available &gt; 0">
                         <div id="in-stock-message" class="in-stock">
                             <span class=""> In Stock </span>
                        </div>
                    </t>
                    <t t-if="not product.qty_available &gt; 0">
                         <div id="out-of-stock-message" class="out-of-stock">
                             <span class=""> Out of Stock </span>
                        </div>
                    </t>
                </t>
            </t>
            <t t-if="website.get_website_config() == 'outgoing'">
                <t t-if="product.type == 'product'">
                    <t t-set="qty_forecasted" t-value="product.qty_available - product.outgoing_qty + product.incoming_qty"/>
                    <t t-if="qty_forecasted &gt; 0">
                         <div id="in-stock-message" class="in-stock">
                             <span class=""> In Stock </span>
                        </div>
                    </t>
                    <t t-if="not qty_forecasted &gt; 0">
                         <div id="out-of-stock-message" class="out-of-stock">
                             <span class=""> Out of Stock </span>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
        <!-- New Template For Disppaly Stock qty in Product Page -->
        <template id="website_all_in_one.display_stock_qty_message" name="Display Stock Qty Message">
            <t t-if="product.type == 'product'">
                <t t-if="website.get_website_config() == 'available'">
                    <t t-if="product.qty_available &gt; 0">
                        <div class="container" style="padding-bottom:10px;padding-left: 8px;padding-top: 12px;">

                            <span class="qty-text" style="margin-left: -9px;">
                                <t t-esc="product.qty_available"/> <t t-esc="product.sudo().uom_id.name"/> left.
                            </span>
                            
                             <div id="in-stock-message" class="in-stock" style="margin-left: -8px;width: fit-content;">
                                 <span class="" style="font-size: larger;"> In Stock </span>
                            </div>
                        </div>
                    </t>
                    <t t-if="not product.qty_available &gt; 0">
                        <div class="container" style="padding-bottom:10px;padding-left: 8px;padding-top: 12px;">
                            <div id="out-of-stock-message" class="out-of-stock" style="margin-left: -8px;width: max-content;">
                                 <span class="" style="font-size: larger;"> Out of Stock </span>
                            </div>
                        </div>
                        <div style="height:1vh" />
                    </t>
                </t>
            </t>
            <t t-if="product.type == 'product'">
                <t t-if="website.get_website_config() == 'outgoing'">
                    <t t-set="qty_forecasted" t-value="product.qty_available - product.outgoing_qty + product.incoming_qty"/>
                    <t t-if="qty_forecasted &gt; 0">
                        <div class="container" style="padding-bottom:10px;padding-left: 8px;padding-top: 12px;">
                            <span class="qty-text" style="margin-left: -9px;">
                                <t t-esc="qty_forecasted"/> <t t-esc="product.sudo().uom_id.name"/> left.
                            </span>
                            
                             <div id="in-stock-message" class="in-stock" style="margin-left: -8px;width: fit-content;">
                                 <span class="" style="font-size: larger;"> In Stock </span>
                            </div>
                        </div>
                    </t>
                            
                    <t t-if="not qty_forecasted &gt; 0">
                        <div class="container" style="padding-bottom:10px;padding-left: 8px;padding-top: 12px;">
                            <div id="out-of-stock-message" class="out-of-stock" style="margin-left: -8px;width: max-content;">
                                 <span class="" style="font-size: larger;"> Out of Stock </span>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        

        <template id="product_qty_message_in_products_item_page" inherit_id="website_sale.products_item" active="True" customize_show="True" name="Show in-out stock message">
            <xpath expr="//form" position="inside">
                <div class="stock-qty-message pull-right">
                    <t t-if="product.product_variant_ids">
                        <t t-call="website_all_in_one.display_stock_qty_message_in_item"/>
                    </t>
                </div>
            </xpath>
        </template>



        <!-- website_sale.products_item page -->
        <template id="product_qty_in_products_item_page" inherit_id="website_sale.products_item" active="True" customize_show="True" name="Show Stock Qty">

            <!-- Show Stock Qty in products_item  -->

            <xpath expr="//div//div//div" position="after">
                <t t-if="product.type == 'product'">
                    <t t-if="website.get_website_config() == 'available'">
                        <t t-if="product.product_variant_ids and product.qty_available &gt; 0">
                            <span class="qty-text">
                                <t t-esc="product.qty_available"/> <t t-esc="product.sudo().uom_id.name"/> left.
                            </span>
                        </t>
                    </t>
                </t>
                <t t-if="product.type == 'product'">
                    <t t-if="website.get_website_config() == 'outgoing'">
                        <t t-set="qty_forecasted" t-value="product.qty_available - product.outgoing_qty + product.incoming_qty"/>
                        <t t-if="product.product_variant_ids and qty_forecasted &gt; 0">
                            <span class="qty-text">
                                <t t-esc="qty_forecasted"/> <t t-esc="product.sudo().uom_id.name"/> left.
                            </span>
                        </t>
                    </t>    
                </t>
            </xpath>
            
            <xpath expr="//div[@itemscope='itemscope']" position="attributes">
                <attribute name="t-att-data-publish">'off' if product.type == 'product' and not product.qty_available &gt; 0 else 'on'</attribute>
            </xpath>
    
        </template>
                
                <!-- Product Qty in single_product_page page -->
        <template id="product_qty_in_single_product_page" inherit_id="website_sale.product" active="True" customize_show="True" name="Show Stock Qty">
            <xpath expr="//a[@id='add_to_cart']" position="before">
                <t t-if="product.type == 'product'">
                    <t t-call="website_all_in_one.show_stock_qty_message"/>            
                </t>
            </xpath>
        </template>


        <!-- Product Qty in cart_lines -->
        <template id="cart_lines_inherit" inherit_id="website_sale.cart_lines"  name="Shopping Cart">
            <xpath expr="//table[@id='cart_products']/tbody//td[hasclass('td-qty')]" position="replace">
                <td class="text-center td-qty">
                    <div class="css_quantity input-group mx-auto oe_website_spinner">
                        <div class="input-group-prepend">
                            <a t-attf-href="#" class="btn btn-link js_add_cart_json d-none d-md-inline-block" aria-label="Remove one" title="Remove one">
                                <i class="fa fa-minus"></i>
                            </a>
                        </div>
                    
                        <t t-if="website.get_website_config() == 'available'">
                            <input type="text" class="js_quantity form-control quantity" t-att-data-line-id="line.id" t-att-data-product-id="line.product_id.id" t-att-data-qty="int(line.product_id.qty_available)" t-att-value="int(line.product_uom_qty)" t-att-type="line.product_id.product_tmpl_id.type"/>
                        </t>
                    
                        <t t-if="website.get_website_config() == 'outgoing'">
                            <t t-set="qty_forecasted" t-value="line.product_id.qty_available - line.product_id.outgoing_qty + line.product_id.incoming_qty"/>
                            <input type="text" class="js_quantity form-control"
                                t-att-data-line-id="line.id"
                                t-att-data-product-id="line.product_id.id"
                                t-att-data-qty="int(qty_forecasted)"
                                t-att-value="int(line.product_uom_qty)"
                                t-att-type="line.product_id.product_tmpl_id.type"/>
                        </t>
                    
                        <div class="input-group-append">
                            <a t-attf-href="#" class="btn btn-link float_left js_add_cart_json d-none d-md-inline-block" aria-label="Add one" title="Add one">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </td>
            </xpath>
        </template>   
                
</odoo>
